<body style="background-image:url(https://d3ha2z1h6pzc4t.cloudfront.net/webapp/register1.jpg);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center;
  padding-top: 20px;
  padding-bottom: 20px">
  <form class="form-signin" action="/users/register" method="POST">   
    <% include ./partials/messages %>
    <div class="text-center mb-4">
      <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i>  Register</h1>
      <p class="lead">Please register to continue</p>
    </div>

    <div class="form-label-group">
      <input
        type="name"
        id="name"
        name="name"
        class="form-control"
        placeholder="Enter Name"
        value="<%= typeof name != 'undefined' ? name : '' %>"
      />
      <label for="name">Name</label>
    </div>
    <div class="form-label-group">
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        placeholder="Enter Email"
        value="<%= typeof email != 'undefined' ? email : '' %>"
      />
      <label for="email">Email</label>
    </div>
    <div class="form-label-group">
      <input
        type="password"
        id="password"
        name="password"
        class="form-control"
        placeholder="Create Password"
        value="<%= typeof password != 'undefined' ? password : '' %>"
      />
      <label for="password">Password</label>
    </div>
    <div class="form-label-group">
      <input
        type="password"
        id="password2"
        name="password2"
        class="form-control"
        placeholder="Confirm Password"
        value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
      />
      <label for="password2">Confirm Password</label>
    </div>
    <div class="form-label-group">
      <input
        type="text"
        id="phone"
        name="phone"
        class="form-control"
        placeholder="Enter Phone Number"
        value="<%= typeof phone != 'undefined' ? phone : '' %>"
      />
      <label for="phone">Phone Number (Optional)</label>
    </div>
    <div class="form-label-group">
      <input
        type="text"
        id="plus_code"
        name="plus_code"
        class="form-control"
        placeholder="Enter Plus Code"
        value="<%= typeof plus_code != 'undefined' ? plus_code : '' %>"
      />
      <label for="plus_code">Plus Code</label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    <p class="lead mt-4">Have An Account? <a href="/users/login" style="color: purple"><strong>Login</strong></a><br>
    Go to Home Page <a href="/dashboard" style="color: purple"><strong>Click Here</strong></a>
    <p class="mt-5 mb-3 text-muted text-center">&copy; Vineet</p>
  </form>
</body>